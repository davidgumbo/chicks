<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_poultry_dates" model="ir.ui.view">
        <field name="name">res.config.settings.poultry.date</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Solution 1: Use the correct XPath for Odoo 18 settings structure -->
            <xpath expr="//div[@class='app_settings_header']" position="after">
                <div class="app_settings_block" data-string="Poultry Dashboard Settings"
                     string="Poultry Dashboard Settings">
                    <h2>Poultry Dashboard Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="poultry_start_date"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="poultry_end_date"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>